        width: {{settings.mb_alif_logo_width_product}}px;
        height: {{settings.mb_alif_logo_height_product}}px;
        fill: none;
        stroke: none;
        vertical-align: top;
      }
       }
      .installment-template-cart .alif-price {
         font-size: {{ settings.font_cart }}px;
         font-weight:{{settings.alif_font_weight_cart}}px;
       }
    .installment-template-cart svg.alifsvg {
        width: {{settings.alif_logo_width_cart}}px;
        height: {{settings.alif_logo_height_cart}}px;
        fill: none;
        stroke: none;
        vertical-align: top;
      }
       .installment-template-cart .alif-gateway-wrapper {
           margin-top:{{settings.mt_cart}}px !important;
           margin-bottom:{{settings.mb_cart}}px !important;
       }
      @media screen and (max-width: 767px) {
        .installment-template-cart .alif-price {
