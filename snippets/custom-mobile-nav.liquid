<div id="CustomMobileNav" class="custom-mobile-nav">
  <div class="custom-mobile-nav__scroller">
    <div class="custom-mobile-nav__header">
      <button class="custom-mobile-nav__header-btn custom-mobile-nav__back-btn" style="display: none;">
        {% render 'icon-chevron-left' %}
      </button>
      <h3 class="custom-mobile-nav__title"></h3>
      <button class="custom-mobile-nav__header-btn custom-mobile-nav__close-btn">
        {% render 'icon-x' %}
      </button>
    </div>

    <div class="custom-mobile-nav__level" data-level="1">
      <div class="custom-mobile-nav__tabs">
        {%- comment -%} Main Header Tabs - Ab yeh clickable hain {%- endcomment -%}
        {% for link in linklists.top-level-category.links %}
          <a href="{{ link.url }}" class="custom-mobile-nav__tab-btn" data-menu-handle="{{ link.handle }}" data-has-children="{% if linklists[link.handle].links.size > 0 %}true{% else %}false{% endif %}">
            {{ link.title }}
          </a>
        {% endfor %}
      </div>

      <div class="custom-mobile-nav__panels">
        {%- comment -%} Panels for each tab {%- endcomment -%}
        {% for link in linklists.top-level-category.links %}
          {% assign panel_menu_handle = link.handle %}
          <div class="custom-mobile-nav__panel" data-menu-handle="{{ panel_menu_handle }}" style="display: none;">
            
            {%- comment -%} SUB MENU GRID {%- endcomment -%}
            <div class="custom-mobile-nav__grid">
              {% for sub_link in linklists[panel_menu_handle].links %}
                <a href="{{ sub_link.url }}" class="custom-mobile-nav__grid-item" data-title="{{ sub_link.title | escape }}" {% if sub_link.links != blank %}data-has-submenu="true"{% endif %}>
                  <span class="custom-mobile-nav__grid-item-title">{{ sub_link.title }}</span>
                  {% if sub_link.links != blank %}
                    <span class="custom-mobile-nav__arrow">›</span>
                  {% endif %}
                </a>
                
                {% if sub_link.links != blank %}
                  <div class="custom-mobile-nav__submenu-data" style="display: none;">
                    <div class="submenu-grid-wrapper">
                      <div class="custom-mobile-nav__grid">
                        {% for child_link in sub_link.links %}
                          <a href="{{ child_link.url }}" class="custom-mobile-nav__grid-item" data-title="{{ child_link.title | escape }}" {% if child_link.links != blank %}data-has-submenu="true"{% endif %}>
                            <span class="custom-mobile-nav__grid-item-title">{{ child_link.title }}</span>
                            {% if child_link.links != blank %}
                              <span class="custom-mobile-nav__arrow">›</span>
                            {% endif %}
                          </a>
                          
                          {% if child_link.links != blank %}
                            <div class="custom-mobile-nav__submenu-data" style="display: none;">
                              <div class="submenu-grid-wrapper">
                                <div class="custom-mobile-nav__grid">
                                  {% for grandchild_link in child_link.links %}
                                    <a href="{{ grandchild_link.url }}" class="custom-mobile-nav__grid-item" data-title="{{ grandchild_link.title | escape }}">
                                      <span class="custom-mobile-nav__grid-item-title">{{ grandchild_link.title }}</span>
                                    </a>
                                  {% endfor %}
                                </div>
                              </div>
                            </div>
                          {% endif %}
                        {% endfor %}
                      </div>
                    </div>
                  </div>
                {% endif %}
              {% endfor %}
            </div>
            
            {%- comment -%} NEECHE KE SAARE MENU ITEMS - YEH SAB SHOW HONGE {%- endcomment -%}
            <hr class="nav-divider">
            
            {%- comment -%} Brands Section {%- endcomment -%}
            <div class="custom-mobile-nav__brands">
              <h5 class="custom-mobile-nav__section-title">BRANDS</h5>
              <div class="custom-mobile-nav__grid">
                {% if linklists['brands'] %}
                  {% for brand_link in linklists.brands.links %}
                    <a href="{{ brand_link.url }}" class="custom-mobile-nav__grid-item">
                      <span class="custom-mobile-nav__grid-item-title">{{ brand_link.title }}</span>
                    </a>
                  {% endfor %}
                {% endif %}
              </div>
            </div>
            
            <hr class="nav-divider">
            
            {%- comment -%} New Collections {%- endcomment -%}
            <div class="custom-mobile-nav__new-collections">
              <h5 class="custom-mobile-nav__section-title">NEW COLLECTIONS</h5>
              <div class="custom-mobile-nav__grid">
                {% if linklists['new-collections'] %}
                  {% for collection_link in linklists['new-collections'].links %}
                    <a href="{{ collection_link.url }}" class="custom-mobile-nav__grid-item">
                      <span class="custom-mobile-nav__grid-item-title">{{ collection_link.title }}</span>
                    </a>
                  {% endfor %}
                {% endif %}
              </div>
            </div>
            
            <hr class="nav-divider">
            
            {%- comment -%} Exclusive Links {%- endcomment -%}
            <div class="custom-mobile-nav__exclusive-links">
              <h5 class="custom-mobile-nav__section-title">EXCLUSIVE</h5>
              <div class="custom-mobile-nav__grid">
                {% if linklists['exclusive'] %}
                  {% for exclusive_link in linklists.exclusive.links %}
                    <a href="{{ exclusive_link.url }}" class="custom-mobile-nav__grid-item">
                      <span class="custom-mobile-nav__grid-item-title">{{ exclusive_link.title }}</span>
                    </a>
                  {% endfor %}
                {% endif %}
              </div>
            </div>
            
            <hr class="nav-divider">
            
            {%- comment -%} FOOTER SECTION {%- endcomment -%}
            <div class="custom-mobile-nav__footer">
              {%- comment -%} Social Links {%- endcomment -%}
              <div class="custom-mobile-nav__social-links">
                {%- if linklists['social-media'] -%}
                  {%- for link in linklists['social-media'].links -%}
                    <a href="{{ link.url }}" target="_blank" rel="noopener">
                      {%- assign social_icon = link.title | handle | prepend: 'icon-' -%}
                      {% render social_icon %}
                    </a>
                  {%- endfor -%}
                {%- endif -%}
              </div>
              
              {%- comment -%} Customer Care {%- endcomment -%}
              <div class="custom-mobile-nav__footer-section">
                <h5 class="custom-mobile-nav__footer-title">CUSTOMER CARE</h5>
                <ul class="custom-mobile-nav__footer-list">
                  {%- if linklists['customer-care'] -%}
                    {%- for link in linklists['customer-care'].links -%}
                      <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                    {%- endfor -%}
                  {%- endif -%}
                </ul>
              </div>
              
              {%- comment -%} About/Company Section {%- endcomment -%}
              <div class="custom-mobile-nav__footer-section">
                <h5 class="custom-mobile-nav__footer-title">ABOUT US</h5>
                <ul class="custom-mobile-nav__footer-list">
                  {%- if linklists['about-us'] -%}
                    {%- for link in linklists['about-us'].links -%}
                      <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                    {%- endfor -%}
                  {%- endif -%}
                </ul>
              </div>
              
              {%- comment -%} Bottom Links {%- endcomment -%}
              <div class="custom-mobile-nav__footer-bottom-nav">
                {%- if linklists['footer-bottom-links'] -%}
                  {%- for link in linklists['footer-bottom-links'].links -%}
                    <a href="{{ link.url }}">{{ link.title }}</a>
                  {%- endfor -%}
                {%- endif -%}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>

    <div class="custom-mobile-nav__level" data-level="2" style="display: none;">
      <div class="custom-mobile-nav__submenu-content"></div>
    </div>
  </div>
</div>